<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.abhishek.styloholic.TipOfTheDayActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Tip of the day"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="italic"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#26A69A"
        android:textColor="#ffff"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/fashionWomen"
        android:scaleType="fitXY"
        android:src="@drawable/fashion_men"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:text="Write the TIP here . Explain the outfit and the theme of the day. Mohit is responsible for this."
        android:fontFamily=""
        android:textSize="20dp"
        android:textColor="#26A69A"
        />
</LinearLayout>
